                        VerticalAlignment="Center" Width="155" >
                   
                </Button>
                 
                <TextBlock x:Name="textConnectionInfo" TextWrapping="Wrap" FontSize="16" 
                           Text=" x:Bind common:ConnectionLog ">

                </TextBlock>
  
    </Grid>
